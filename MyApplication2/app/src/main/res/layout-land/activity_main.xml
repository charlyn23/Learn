<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_weight="1"
            android:id="@+id/del"
            android:layout_width="0dp"
            android:text="del"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/deg"
            android:text="deg"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/xExc"
            android:text="x!"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/leftParan"
            android:text="("
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/rightParan"
            android:text=")"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/percent"
            android:text="%"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/ac"
            android:text="ac"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_weight="1"
            android:id="@+id/inv"
            android:text="INV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/sin"
            android:text="sin"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/in"
            android:text="in"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/seven"
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/eight"
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/nine"
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/divide"
            android:text="/"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/pi"
            android:text="pi"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/cos"
            android:text="cos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/log"
            android:text="log"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/four"
            android:text="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/five"
            android:text="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/six"
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/multiply"
            android:text="x"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:id="@+id/e"
            android:text="e"
            android:layout_height="match_parent"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/tan"
            android:text="tan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <Button
            android:id="@+id/sqrt"
            android:text="sqrt"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <Button
            android:id="@+id/one"
            android:text="1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <Button
            android:id="@+id/two"
            android:text="2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <Button
            android:id="@+id/three"
            android:text="3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <Button
            android:id="@+id/minus"
            android:text="-"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
            android:text="ans"
            android:id="@+id/answer"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <Button
            android:text="EXP"
            android:id="@+id/exp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <Button
            android:text="xy"
            android:id="@+id/xy"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <Button
            android:text="0"
            android:id="@+id/zero"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <Button
            android:text="."
            android:id="@+id/period"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <Button
            android:text="="
            android:id="@+id/equal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <Button
            android:text="+"
            android:id="@+id/plus"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
    </LinearLayout>

</LinearLayout>
</LinearLayout>
